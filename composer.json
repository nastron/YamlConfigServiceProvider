{
    "name": "deralex/yaml-config-service-provider",
    "description": "Silex ServiceProvider for using YAML configuration files",
    "keywords": ["silex"],
    "license": "MIT",
    "authors": [{
        "name": "Alexander Kluth",
        "email": "contact@alexanderkluth.com"
    }],
    "require": {
        "silex/silex": ">=1.0 <2.0",
        "symfony/yaml": "^3.0",
        "deralex/yaml-config-service-provider": "dev-master"
    },
    "require-dev": {
        "phpspec/phpspec": "2.0.*@dev"
    },
    "suggest": {
        "symfony/yaml": "^3.0"
    },
    "autoload": {
        "psr-0": { "DerAlex\\Silex": "src" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
